<Window x:Class="NoteBuilder.TagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBuilder"
        mc:Ignorable="d"
        Title="Replacement" Height="120" Width="250" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock x:Name="PromptTextBlock" TextWrapping="Wrap" Margin="0 0 0 10" Text="Replace the tag" HorizontalAlignment="Center"/>
            <TextBox x:Name="AnswerTextBox" Width="200" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="60" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

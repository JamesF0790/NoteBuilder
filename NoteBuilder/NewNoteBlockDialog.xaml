<Window x:Class="NoteBuilder.NewNoteBlockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBuilder"
        mc:Ignorable="d"
        Title="New NoteBlock" Width="480" Height="130">
    <StackPanel>
        <TextBlock Text="Enter a title" Margin="10"/>
        <TextBox x:Name="TitleTextBox" Margin ="10,10,10,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Content="OK" Click="OkButton_Click" Margin="10,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="10,0,10,0"/>
        </StackPanel>

    </StackPanel>
</Window>
